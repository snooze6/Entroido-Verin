<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingRight="@dimen/listview_horizontal_margin"
                android:paddingLeft="@dimen/listview_horizontal_margin"
                android:paddingTop="@dimen/card_padding"
                android:layout_centerInParent="true">


    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                                        android:id="@+id/cv"
                                        android:layout_width="@dimen/card_width"
                                        android:layout_height="@dimen/card_height"
                                        android:orientation="vertical"
                                        android:paddingBottom="@dimen/activity_vertical_margin"
                                        android:paddingLeft="@dimen/activity_horizontal_margin"
                                        android:paddingRight="@dimen/activity_horizontal_margin"
                                        android:paddingTop="@dimen/activity_vertical_margin"
                                        card_view:cardCornerRadius="8dp"
                                        android:layout_centerInParent="true">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:clickable="true">

                <ImageView
                    android:id="@+id/card_network_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/card_photo"



                    android:scaleType="centerCrop"
                    android:src="@drawable/icon"
                    android:clickable="true" />


                <TextView
                    android:id="@+id/item_title_special"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Jueves de Comadres "
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_below="@+id/card_network_image"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:id="@+id/item_date_special"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:text="02/02/2016"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textSize="15dp"
                    android:layout_below="@+id/item_title_special"
                    android:layout_alignLeft="@+id/item_title_special"
                    android:layout_alignStart="@+id/item_title_special" />

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/imageButton"
                    android:src="@drawable/ic_info_outline_black_24dp"
                    android:background="#00ffffff"
                    android:layout_alignBottom="@+id/item_date_special"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:clickable="true" />

            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>